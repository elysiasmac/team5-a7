<html>
<head>
	<link rel="stylesheet" href="/css/website.css" >
    <link rel ="stylesheet" href="https://fonts.googleapis.com/css?family=Inter">
    <style>
        body{
            font-family: "Inter", sans-serif;
        }
    </style>
	<title>Home</title>

    <script type="text/javascript" src="/js/currentsession.js"></script>
</head>
<body>
    <div class="header">
        <a href="homepage"><h4>Back<h4></a>
        <h1>Current Session</h1>
    </div>
    <div class="sesh_type">
        <button type="button">Timer</button>
        <button type="button">Stopwatch</button>
    </div>
    <div class="container">

        <div class="display">
            <div id="container">
                <p id="hour-label" class="label">Hours</p>
                <p id="min-label" class="label">Minutes</p>
                <p id="sec-label" class="label">Seconds</p>
                <input id="hour" type="number" max="99" min="0" value="0" class="time">
                <p id="p1" class="semicolon">:</p><input id="minute" type="number" max="60" min="0" value="0" class="time">
                <p id="p2" class="semicolon">:</p><input id="sec" type="number" max="60" min="0" value="0" class="time">
            </div>
        </div>
        <div class = "buttons">
            <button id="start" class="btn">Start</button>
            <button id="reset" class="btn">Reset</button>
        </div>
        <div class="small-button">
            <a href="reflections"><p>End Session</p></a></button>
        </div>
    </div>
      <script src="/js/timer.js"></script>
</body>